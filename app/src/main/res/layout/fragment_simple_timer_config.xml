<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_16">

    <TextView
        android:id="@+id/every_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/every"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/num_minutes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_one_minute"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@id/every_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/minute_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minute"
        app:layout_constraintStart_toEndOf="@id/num_minutes_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/for_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repeat_for"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/every_text" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/num_sets_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_twenty_sets"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@id/for_text"
        app:layout_constraintTop_toBottomOf="@id/every_text" />

    <TextView
        android:id="@+id/sets_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sets"
        app:layout_constraintStart_toEndOf="@id/num_sets_text"
        app:layout_constraintTop_toBottomOf="@id/every_text" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>