<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColorHint">@color/colorHintText</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.Header1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">@dimen/font_size_32</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.Header2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_22</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.Header2.Light">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Widget.MaterialComponents.Button.Rounded">
        <item name="android:padding">@dimen/size_12</item>
        <item name="cornerRadius">@dimen/size_16</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.Rounded">
        <item name="android:paddingTop">@dimen/size_12</item>
        <item name="android:paddingBottom">@dimen/size_12</item>
        <item name="android:paddingStart">@dimen/size_16</item>
        <item name="android:paddingEnd">@dimen/size_16</item>
        <item name="cornerRadius">@dimen/size_16</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

</resources>
